!!! HTML
%html
  %head
    %title
    = javascript_include_tag "application", "data-turbolinks-track" => false
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    %meta{:charset => "utf-8"}

  %body
    %div.header.container
      %div.main-header-bar
        %div.col-md-12.main-header
          %div.col-md-3
            = link_to "Logo", '/', :class => 'logo'

          %div.col-md-3.col-md-offset-6#username-panel.text-right
            %strong
              = link_to(content_tag(:i, '', :class => 'fa fa-user') + ' ' + @current_user.name + ' ' + content_tag(:i, '', :class => 'fa fa-caret-down'), home_url, :class => 'current-user-name username-tooltip-trigger text-right') if @current_user
              %div.username-tooltip
                %ul
                  %li= link_to 'Home', home_url, :class => 'gray-link'
                  %li= link_to 'Settings', settings_url, :class => 'gray-link'
                  %li= link_to 'Profile', profile_url, :class => 'gray-link'
                  %li= link_to 'Unsubmitted Events', unsubmitted_events_url, :class => 'gray-link'
                  %li= link_to 'All Organizations', all_organizations_url, :class => 'gray-link'
                  %li= link_to 'Organization Memberships', organizations_url, :class => 'gray-link'
                  %li= link_to 'Team Memberships', teams_url, :class => 'gray-link'


              = "|" if @current_user
              = link_to(content_tag(:i, '', :class => 'fa fa-power-off') + ' Log out', logout_path, :class => 'text-right') if @current_user

    %div.container
      %div.col-md-12.container.content
        %p.flash-message.text-center
          %strong
            = flash[:notice]
        = yield

    -# = javascript_include_tag "application", "data-turbolinks-track" => false
