- @page_title = 'UserAuth | Login'

%div.container
  %div.col-md-4.col-md-offset-4
    %h2.text-center Login
    = form_tag({:method => 'login_attempt'}, {:class => 'content-box'}) do
      %p
        Name or Email:
        = text_field_tag :name_or_email, '', {:class => 'form-control'}
      %p
        Password:
        = password_field_tag :password, '', {:class => 'form-control'}

      = submit_tag 'Log in', {:class => 'btn btn-primary'}

    %p.login-footer.text-center
      Do you not have an account yet? Then
      = link_to "sign up", signup_url
      \.
