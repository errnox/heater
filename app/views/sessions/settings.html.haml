%div.container
  %div.col-md-4.col-md-offset-4
    %h2.non-box-text.text-center Settings
    -# %p.text-right
    -#   = link_to "× Cancel", home_url
    = form_tag({:method => "change_password"}, {:class => 'content-box'}) do
      %p.text-right#cancel-button
        = link_to "×", home_url
      %p.text-center Here you can change your password.
      %p
        = hidden_field_tag :name, @current_user.name
      %p
        Old password:
        = password_field_tag :old_password, '', {:class => 'form-control'}
      %p
        New password:
        = password_field_tag :new_password, '', {:class => 'form-control'}
      %p
        New password confirmation:
        = password_field_tag :new_password_confirmation, '', {:class => 'form-control'}
      = submit_tag 'Set new password', {:class => 'btn btn-primary'}
